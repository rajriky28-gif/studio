rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin emails
    function isAdmin() {
      let adminEmails = [
        'riky@google.com',
        'admin@lumivex.com',
        'founder@lumivex.com',
        'lumivex.company@gmail.com'
      ];
      return request.auth != null && request.auth.token.email in adminEmails;
    }

    // JOBS: Public can read, only admins can write.
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // USERS: Authenticated users can read profiles, but can only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // WAITLIST: Users can only create and update their own entry. No one can delete.
    match /waitlist/{userId} {
      allow read: if request.auth.uid == userId;
      allow create, update: if request.auth.uid == userId;
      allow delete: if false;
    }

    // REFERRAL CODES: Authenticated users can read/create, but cannot modify.
    match /referralCodes/{code} {
      allow read, create: if request.auth != null;
      allow update, delete: if false;
    }

    // REFERRALS: Authenticated users can create new referral records.
    match /referrals/{referralId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // STATS: Publicly readable, but only admins can update them.
    match /stats/global {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
