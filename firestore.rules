
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Waitlist collection:
    // - Allow anyone (including unauthenticated users) to create an entry.
    // - This is safe because we are using anonymous authentication on the client-side.
    //   The rule `request.auth != null` ensures that only Firebase-authenticated requests
    //   (even anonymous ones) can write.
    // - Writes are only allowed if the incoming data has the required fields
    //   and the `id` in the document matches the document's ID in the path.
    // - Reading, updating, or deleting entries is not allowed to protect user data.
    match /waitlistEntries/{waitlistEntryId} {
      allow read, update, delete: if false;
      allow create: if request.auth != null
                      && request.resource.data.id == waitlistEntryId
                      && request.resource.data.keys().hasAll(['id', 'email', 'timestamp'])
                      && request.resource.data.email is string;
    }
  }
}
