
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Waitlist collection:
    // - Users can create their own waitlist entry.
    // - Users can read their own entry to see their dashboard.
    // - Users can update their own referral count (implicitly via referral processing).
    match /waitlist/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if false;
    }

    // Users collection:
    // - Users can create their own profile upon signup.
    // - Users can read and update their own profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId);
      allow delete: if false;
    }
    
    // Referral Codes collection:
    // - Any authenticated user can read a referral code to validate it.
    // - Users can create their own referral code document when they join the waitlist.
    match /referralCodes/{code} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
    }
    
    // Referrals collection:
    // - Any authenticated user can create a referral record when they use a code.
    // - A user can read a referral record if they were the referrer or the one referred.
    match /referrals/{referralId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && (request.auth.uid == resource.data.referrerUserId || request.auth.uid == resource.data.newUserId);
        allow update, delete: if false;
    }

    // Stats collection:
    // - Anyone can read global stats (e.g., total members).
    // - No one can write to global stats from the client. This must be handled by a backend function.
    match /stats/global {
      allow read: if true;
      allow write: if false;
    }
  }
}

    