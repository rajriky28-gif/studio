rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email in ['riky@google.com', 'admin@lumivex.com', 'founder@lumivex.com', 'lumivex.company@gmail.com'];
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId || isAdmin();
    }

    match /waitlist/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId || isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /referralCodes/{code} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow write: if isAdmin();
    }
    
    match /stats/global {
        allow read: if true;
        allow write: if isAdmin();
    }

    // JOBS COLLECTION - PUBLIC READ FOR ACTIVE JOBS, ADMIN WRITE
    match /jobs/{jobId} {
      // Anyone (logged in or not) can query the collection and read active jobs.
      allow list;
      allow read: if resource.data.status == 'active';
      
      // Only admins can create, update, or delete jobs.
      allow write: if isAdmin();
    }
  }
}
