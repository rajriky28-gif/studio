rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.email in [
               'riky@google.com',
               'admin@lumivex.com',
               'founder@lumivex.com',
               'lumivex.company@gmail.com'
             ];
    }

    // --- COLLECTION-SPECIFIC RULES ---

    // USERS: Can read/write their own profile, or if admin.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // WAITLIST: Can read/update their own entry, or if admin. Can only create their own.
    match /waitlist/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow delete: if isAdmin();
    }

    // REFERRAL CODES: Authenticated users can read/create. Only admins can write/delete.
    match /referralCodes/{code} {
      allow read, create: if isAuthenticated();
      allow write: if isAdmin(); // Combines update and delete for admins
    }

    // REFERRALS: Authenticated users can read/create. No one can update/delete.
    match /referrals/{referralId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if false;
    }

    // STATS: Publicly readable. Only admins can write.
    match /stats/global {
      allow read: if true;
      allow write: if isAdmin();
    }

    // JOBS: Public can read, Admins can write. This is the fix.
    match /jobs/{jobId} {
      // Allow 'list' for the collection query and 'get' for individual document reads.
      allow read: if true;
      // allow create, update, delete for admins.
      allow write: if isAdmin();
    }
  }
}
