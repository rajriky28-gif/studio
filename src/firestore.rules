
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function - check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email in [
               'lumivex.company@gmail.com',
               'rajriky28@gmail.com',
               'riky@gmail.com'
             ];
    }
    
    // JOBS COLLECTION - PUBLIC READ, ADMIN WRITE
    match /jobs/{jobId} {
      // Anyone can read jobs (no auth needed)
      allow read: if true;
      
      // Only admin can create, update, delete
      allow write: if isAdmin();
    }
    
    // BLOG POSTS - PUBLIC READ, ADMIN WRITE
    match /blog_posts/{postId} {
      // Anyone can read published posts
      allow read: if resource.data.status == 'published';
      
      // Admin can read all (including drafts)
      allow read: if isAdmin();
      
      // Only admin can write
      allow create, update, delete: if isAdmin();
    }
    
    // USERS COLLECTION - AUTHENTICATED USERS ONLY
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // WAITLIST COLLECTION - AUTHENTICATED USERS ONLY
    match /waitlist/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // REFERRAL CODES - READ FOR VALIDATION, WRITE ONLY BY OWNER
    match /referralCodes/{code} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }
    
    // REFERRALS - READ OWN, WRITE FOR TRACKING
    match /referrals/{referralId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }
    
    // STATS - PUBLIC READ, AUTHENTICATED WRITE
    match /stats/global {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
